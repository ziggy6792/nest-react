{
  "extends": "@repo/typescript-config/nestjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "composite": false,
    "module": "commonjs",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": ["ES2020"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts", "jest.config.ts"]
}
